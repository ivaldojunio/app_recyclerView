<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FormGastoActivity">

    <EditText
        android:id="@+id/formEditValor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Informe o valor do gasto"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/formEditData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Data"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/formEditValor"
        app:layout_constraintStart_toStartOf="@+id/formEditValor"
        app:layout_constraintTop_toBottomOf="@+id/formEditValor" />

    <EditText
        android:id="@+id/formEditDescricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Descrição: café, aluguel, gasolina, etc"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/formEditData"
        app:layout_constraintStart_toStartOf="@+id/formEditData"
        app:layout_constraintTop_toBottomOf="@+id/formEditData" />

    <EditText
        android:id="@+id/formEditCategoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Categoria: Aluguel, Transporte, Lazer, etc"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/formEditDescricao"
        app:layout_constraintStart_toStartOf="@+id/formEditDescricao"
        app:layout_constraintTop_toBottomOf="@+id/formEditDescricao" />

    <EditText
        android:id="@+id/formEditFormaPagamento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Forma de Pagamento: Dinheiro, Débito, Crédito"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/formEditCategoria"
        app:layout_constraintStart_toStartOf="@+id/formEditCategoria"
        app:layout_constraintTop_toBottomOf="@+id/formEditCategoria" />

    <Button
        android:id="@+id/formButtonSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        app:layout_constraintEnd_toEndOf="@+id/formEditFormaPagamento"
        app:layout_constraintStart_toStartOf="@+id/formEditFormaPagamento"
        app:layout_constraintTop_toBottomOf="@+id/formEditFormaPagamento" />
</androidx.constraintlayout.widget.ConstraintLayout>